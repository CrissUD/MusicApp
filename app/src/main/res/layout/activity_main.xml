<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#270E43"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library"
        android:textColor="#ccffffff"
        android:layout_marginTop="25dp"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="15dp"
        android:hint="Song or artist..."
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="#B2FFFFFF"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title" />
    <TextView
        android:id="@+id/playListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="PlayList"
        android:textColor="#ccffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/searchInput"
        app:layout_constraintTop_toBottomOf="@id/searchInput" />
    <HorizontalScrollView
        android:id="@+id/playListScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/playListTitle"
        app:layout_constraintTop_toBottomOf="@id/playListTitle">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:background="#3D225E"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bullet_cover" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Scream Aim Fire"
                    android:textColor="#ccffffff"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bullet for my Valentine"
                    android:textColor="#80FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:src="@mipmap/metallica_cover"
                        android:scaleType="centerCrop"
                        android:background="#3D225E" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="And Justice for All"
                    android:textColor="#ccffffff"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metallica"
                    android:textColor="#80ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:src="@mipmap/obscura_cover"
                        android:scaleType="centerCrop"
                        android:background="#3D225E" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Omnivium"
                    android:textColor="#ccffffff"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obscura"
                    android:textColor="#80ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/favoriteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Favorite"
        android:textColor="#ccffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/playListScroll"
        app:layout_constraintTop_toBottomOf="@id/playListScroll" />
    <androidx.cardview.widget.CardView
        android:id="@+id/noteImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="35dp"
        app:layout_constraintStart_toStartOf="@id/favoriteTitle"
        app:layout_constraintTop_toBottomOf="@id/favoriteTitle">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#3D225E"
            android:src="@drawable/ic_music"
            android:scaleType="center"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Save Me"
        android:textColor="#ccffffff"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/noteImg"
        app:layout_constraintTop_toBottomOf="@id/favoriteTitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:text="Avenged Sevenfold"
        android:textColor="#80ffffff"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/noteImg"
        app:layout_constraintTop_toBottomOf="@id/songName"/>
    <ImageView
        android:layout_marginTop="25dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintTop_toBottomOf="@id/favoriteTitle"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/currentSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/noteImg"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/queen_cover"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:background="@drawable/round_border"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/noteImg"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="60dp">
            <ImageView
                android:background="#FF16CD"
                android:layout_width="72dp"
                android:layout_height="90dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/currentSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Bohemian Rhapsody"
            android:textColor="#ccffffff"
            android:textSize="16sp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/pause"
            android:onClick="showColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/imgPause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FF16CD"
                android:src="@drawable/ic_pause"
                android:scaleType="center"
                />
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>